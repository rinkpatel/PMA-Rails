.row.justify-content-center
  .col-xl-10.col-lg-12.col-md-9.mt-5
    .card.o-hidden.border-0.shadow-lg.my-5
      .card-body.p-0
        / Nested Row within Card Body
        .row
          .col-lg-5.d-none.d-lg-block.bg-register-image
          .col-lg-7
            .p-5
              .text-center
                %h1.h4.text-gray-900.mb-4 Create an Account!
              = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
                .form-group.row
                  .col-sm-6.mb-3.mb-sm-0
                    = f.text_field :first_name, class: 'form-control form-control-user', placeholder: "First Name"
                  .col-sm-6
                    = f.text_field :last_name, class: 'form-control form-control-user', placeholder: "Last Name"
                .form-group
                  = f.email_field :email, class: 'form-control form-control-user', placeholder: "Email Address"
                .form-group.row
                  .col-sm-6.mb-3.mb-sm-0
                    = f.password_field :password, class: 'form-control form-control-user', placeholder: "Password", type: "password"
                  .col-sm-6
                    = f.password_field :password_confirmation, class: 'form-control form-control-user', placeholder: "Repeat Password", type: "password"
                = f.submit 'Register Account', :class => 'btn btn-primary btn-user btn-block'
              %hr/
              - if devise_mapping.recoverable?
                .text-center
                  = link_to "Forgot password?", new_password_path(resource_name), class: 'small'
              .text-center
                = link_to 'Already have an account? Login!', root_path, class: 'small'