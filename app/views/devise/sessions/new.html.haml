.row.justify-content-center
  .col-xl-10.col-lg-12.col-md-9.mt-5
    .card.o-hidden.border-0.shadow-lg.my-5
      .card-body.p-0
        / Nested Row within Card Body
        .row
          .col-lg-6.d-none.d-lg-block.bg-login-image
          .col-lg-6
            .p-5
              .text-center
                %h1.h4.text-gray-900.mb-4 Welcome Back!
              = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
                .form-group
                  = f.email_field :email, :autofocus => true, class: 'form-control form-control-user', placeholder: "Enter Email Address...", type: "email"
                .form-group
                  = f.password_field :password, class: 'form-control form-control-user', placeholder: 'Password', type: "password"
                .form-group
                  - if devise_mapping.rememberable?
                    .custom-control.custom-checkbox.small
                      = f.check_box :remember_me, id: "customCheck", class: "custom-control-input"
                      %label.custom-control-label{:for => "customCheck"} Remember Me
                = f.submit 'Sign in', :class => 'btn btn-primary btn-user btn-block'
              %hr/
              - if devise_mapping.recoverable?
                .text-center
                  = link_to "Forgot password?", new_password_path(resource_name), class: 'small'
              - if devise_mapping.registerable?
                .text-center
                  = link_to 'Create an Account!', new_registration_path(resource_name), class: 'small'
