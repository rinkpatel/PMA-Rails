.row.justify-content-center
  .col-xl-10.col-lg-12.col-md-9.mt-5
    .card.o-hidden.border-0.shadow-lg.my-5
      .card-body.p-0
        / Nested Row within Card Body
        .row
          .col-lg-6.d-none.d-lg-block.bg-password-image
          .col-lg-6
            .p-5
              .text-center
                %h1.h4.text-gray-900.mb-2 Forgot Your Password?
                %p.mb-4 We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!
              = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|
                .form-group
                  = f.email_field :email, :autofocus => true, class: 'form-control form-control-user', placeholder: "Enter Email Address...", type: "email"
                = f.submit 'Reset Password', :class => 'btn btn-primary btn-user btn-block'
              %hr/
              - if devise_mapping.registerable?
                .text-center
                  = link_to 'Create an Account!', new_registration_path(resource_name), class: 'small'
              .text-center
                = link_to 'Already have an account? Login!', root_path, class: 'small'